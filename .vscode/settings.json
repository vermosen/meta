{
    "cmake.configureArgs": [
        "-DCMAKE_PROFILE=gcc84"
    ],
    "cmake.buildDirectory": "${workspaceFolder}/${buildType}",
    "cmake.buildTask": false,
    "cmake.environment": {
      "PATH": "/opt/miniconda/envs/py38/bin:${env:PATH}",
      "CONAN_CHANNEL": "stable",
      "CONAN_USERNAME": "jvermosen"
    },
    "files.exclude": {
        "bin": true,
        "lib": true,
        "include": true,
        "Debug": true,
        "Release": true,
        "Profiling": true
    },
    "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
    "[Log]": {
        "editor.wordWrap": "on",
        "editor.fontSize": 10
    }
}